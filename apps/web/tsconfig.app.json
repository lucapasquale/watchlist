{
  "extends": "@workspace/typescript-config/react-library.json",
  "include": ["src"],
  "compilerOptions": {
    "module": "ESNext",
    "moduleResolution": "bundler",

    "paths": {
      "@api/*": ["../api/src/*"],
      "@helpers/*": ["../../libs/helpers/src/*"],
      "@ui/*": ["../../libs/ui/src/*"],

      "~common/*": ["./src/common/*"],
      "~graphql/*": ["./src/graphql/*"],
      "~modules/*": ["./src/modules/*"],
      "~routes/*": ["./src/routes/*"],
    }
  },
}

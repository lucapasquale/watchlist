{
  "include": ["src", "drizzle.config.ts"],
  "compilerOptions": {
    "outDir": "dist",
    "sourceMap": true,
    "composite": true,
    "declarationMap": true,

    "esModuleInterop": true,
    "skipLibCheck": true,
    "module": "nodenext",
    "target": "es2022",
    "lib": ["es2022"],
    "allowJs": true,
    "resolveJsonModule": true,
    "moduleDetection": "force",
    "isolatedModules": true,

    "strict": true,
    "noUncheckedIndexedAccess": true,
    "noImplicitOverride": true
  }
}
